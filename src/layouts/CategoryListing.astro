---
import '@/styles/global.css';
import 'animate.css';
import { site } from '@/config';
import Slide from '@/components/Slide.astro';
import CookieConsent from '@/components/CookieConsent.astro';
import Footer from '@/components/Footer.astro';
import BusinessCard from '@/components/BusinessCard.astro';


interface Props {
  title: string;
  background?: string;
}

const title = Astro.props.title;

---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{site.fullname} | {site.payoff}</title>
    <meta name='author' content={site.fullname} />
    <meta name='generator' content='Made with ❤️ by Giorgio Tedesco' />
    <!-- Developed by Giorgio Tedesco | giorgiotedesco.it -->
     <script defer src="https://get.giorgiotedesco.it/script.js" data-website-id="04e978e4-8231-4926-8b38-22c2a45666f3"></script>
  </head>
  <body>
    
    <Slide height={100} top={true}>
        <div class='container flex justify-around flex-col  items-center gap-4 px-5 lg: py-10'>
            <h1 class='text-2xl mb-5 font-[EUR42] text-white'>{title}</h1>
            <BusinessCard />
            <slot />
        </div>
    </Slide>
    
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
