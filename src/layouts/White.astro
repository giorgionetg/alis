---
import '@/styles/global.css';
import 'animate.css';
import { site } from '@/config';
import Slide from '@/components/Slide.astro';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{site.fullname} | {site.payoff}</title>
    <meta name='author' content={site.fullname} />
    <meta name='generator' content='Made with ❤️ by Giorgio Tedesco' />
    <!-- Developed by Giorgio Tedesco | giorgiotedesco.it -->
  </head>
  <body>
    <slot />
    <Slide color='bg-blue-800'>
      <span class='my-2 text-white'><a href='https://www.giorgiotedesco.it' target='_BLANK'>Made by Giorgiotedesco.it</a></span>
    </Slide>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
