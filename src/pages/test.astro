---
import Alis from '@/components/Alis.astro';
import Layout from '@/layouts/White.astro';
import { site } from '@/config';
---

<Layout>
  <div
    class='w-full h-full flex flex-col items-center justify-center bg-gray-300 space-y-4 p-4'
  >
    <div
      class='w-full max-w-xs sm:max-w-sm md:max-w-md lg:w-[28rem] aspect-[85/55] bg-gray-100 shadow-2xl rounded-md flex flex-col items-center justify-center p-5 text-center'
    >
      <h1 class='text-gray-600 text-xl sm:text-2xl font-bold'>
        {site.fullname}
      </h1>
      <h3 class='text-sm sm:text-md mt-2'>{site.payoff}</h3>
    </div>

    <div class='mt-4'>icon set</div>
  </div>
</Layout>
