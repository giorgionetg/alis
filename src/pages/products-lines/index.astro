---

import Layout from "@/layouts/CategoryListing.astro";
import Hero from "@/components/Hero.astro";
import Paper from "@/components/Paper.astro";
import SubMenu from "@/components/SubMenu.astro";

import { getEntry, type CollectionEntry } from "astro:content";

const homeBase = await getEntry('products', 'artichokes-variant') as CollectionEntry<'products'>;;
const { Content } = await homeBase.render();

const heroDat = [
    'Artichokes that open markets.',
    'From our fields to your shelves.',
    'Premium artichokes, trusted by buyers.'
];

---

<Layout title=`Products' Lines`>

    <Hero data={heroDat} />

    <Paper size='w-full lg:w-180'>
        <!-- <SubMenu /> -->
        <Content />
    </Paper>



</Layout>