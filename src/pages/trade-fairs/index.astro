---
import Layout from "@/layouts/CategoryListing.astro";
import { getCollection } from "astro:content";
const fairs = (await getCollection("trade-fairs")).sort(
	(a, b) => b.data.startdate.valueOf() - a.data.startdate.valueOf()
);
import Hero from "@/components/Hero.astro";

import Event from '@/components/cards/Event.astro';
const heroDat = [
    'Turning fair meetings into real business.',
    'From first contact to lasting collaboration.',
    'Your bridge to the Market.'
]

---

<Layout title='Trade Fairs'>
    <Hero data={heroDat} />
    <ul class='flex flex-row flex-wrap max-w-180 gap-2'>
        {fairs.map((fair) => (
            <li>
                <Event isBooking={fair.data.isBooking} name={fair.data.title} slug={fair.slug} startdate={fair.data.startdate as unknown as string} enddate={fair.data.enddate as unknown as string} img={`/${fair.data.image}`} cta='Reserve a Meeting' location={fair.data.location as unknown as string} />
            </li>
        ))}
    </ul>
</Layout>
