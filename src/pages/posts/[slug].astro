---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/White.astro';
import BusinessCard from '@/components/BusinessCard.astro';
import Paper from '@/components/Paper.astro';
import Slide from '@/components/Slide.astro';

export async function getStaticPaths() {
  const pages = await getCollection('posts');
  return pages.map((p) => ({
    params: { slug: p.slug },
    props: { page: p },
  }));
}

const { page } = Astro.props;


const { Content } = await page.render();
---
<Layout>
  <Slide color='bg-slate-300' height={100}>
    <div class='container flex flex-col justify-around items-center gap-4 px-5 lg: py-10'>
      <h2 class='text-2xl mb-5 font-[EUR42] text-white'>{ page.data.title }</h1>
      <BusinessCard />
      <Paper><Content /></Paper>    
      
    </div>
    
  </Slide>
</Layout>
